FC = mpif90
MACRO_PREFIX = -D
CPPFLAG = -cpp
FFLAGS = -O2 -Wall -fopenmp -I$(HOME)/lib -I$(HOME)/include/elpa_openmp-2015.05.001/modules
LDFLAGS = $(FFLAGS)
WITH_EIGENEXA=1
WITH_ELPA=1
LIBS = -L$(HOME)/lib/ -lelpa_openmp -lEigenExa -lscalapack-openmpi -lblacsF77init-openmpi -lblacs-openmpi -llapack -lblas
WNO_UNUSED_DUMMY_ARGUMENT_FLAG = -Wno-unused-dummy-argument
